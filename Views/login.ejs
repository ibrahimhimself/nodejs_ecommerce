        <div class="err-msg text-danger fw-bold"><%= error %></div><% } %>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div>
            Create New Account ? <a href="/signup" class="btn">Sign Up</a>
        </div>
    </form>
</div>

